<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DNU | @ViewBag.Title</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        nav {
            padding: 10px;
            text-align: right;
        }

        nav a {
            text-decoration: none;
            margin-right: 10px;            
        }

        nav button {
            padding: 8px 15px;
            border: 1px solid #ccc;
            border-radius: 4px;
            transition: background-color 0.3s;
        }

        nav button:hover {
            background-color: #333;
            color: #fff;
            border-color: #333;
        }
    </style>
</head>
<body>
    <h2>@ViewBag.Title</h2>
    <nav>
        <a href="/Home/Index">
            <button type="button">Home</button>
        </a>
        <a href="/Home/Profile">
            <button type="button">Profile</button>
        </a>
        <a href="/Home/About">
            <button type="button">About</button>
        </a>
    </nav>
    <div>
        @RenderBody()
    </div>
</body>
</html>