@model Lab9TRKVD.Models.User

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Додавання користувача</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-image: url(https://wallpaper-mania.com/wp-content/uploads/2018/09/High_resolution_wallpaper_background_ID_77701705935.jpg);
            background-size: cover;
            margin: 0;
            padding: 0;
        }

        h1 {
            color: #fff;
            text-align: center;
        }

        form {
            width: 50%;
            margin: 50px auto;
            background-color: #fff;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            padding: 20px;
            border-radius: 5px;
        }

        label {
            display: block;
            margin-bottom: 8px;
            color: #333;
        }

        button {
            background-color: #4CAF50; /* Зелений фон */
            color: white; /* Білий текст */
            padding: 10px 15px; /* Внутрішній відступ */
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 50px 900px;
            cursor: pointer;
            border-radius: 5px;
        }

        input[type="text"],
        input[type="number"] {
            width: 100%;
            padding: 8px;
            margin-bottom: 16px;
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        input[type="submit"] {
            background-color: #DC143C;
            color: white;
            border: none;
            padding: 10px 15px;
            cursor: pointer;
            border-radius: 4px;
        }

        input[type="submit"]:hover {
            background-color: #C71585;
        }
    </style>
</head>
<body>
    <h1>Додавання користувача</h1>
    <form asp-action="create" asp-controller="home">
        <p>
            <label asp-for="Name">Ім'я</label><br />
            <input type="text" asp-for="Name" />
        </p>
        <p>
            <label asp-for="Mark">Середній бал</label><br />
            <input type="number" asp-for="Mark" min="1" max="200" />
        </p>
        <p>
            <input type="submit" value="Відправити" />
        </p>
    </form>
    <a asp-action="Index" asp-controller="Home"><button>На головну сторінку</button></a>
</body>
</html>